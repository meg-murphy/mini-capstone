<h2>Sign Up</h2>

<%= form_tag "/users", method: :post do %>
  <form class="form-inline">

    <div class="form-group">
       <%= text_field_tag :name, nil, placeholder: "Name", class: "form-control"%>
    </div>

    <div class="form-group">
       <%= text_field_tag :email, nil, placeholder: "Email", class: "form-control"%>
    </div>

    <div class="form-group">
       <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control"%>
    </div>

    <div class="form-group">
       <%= password_field_tag :password_confirmation, nil, placeholder: "Password", class: "form-control"%>
    </div>

  <div>
    <%= submit_tag "Submit", class:"btn btn-default" %>
  </div>

<% end %>
