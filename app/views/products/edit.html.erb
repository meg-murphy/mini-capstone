<%= form_tag "/all_products/#{@product.id}", method: :patch do %>
<form class="form-inline">

  <div class="form-group">
     <%= label_tag :name %>
     <%= text_field_tag :name, @product.name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image_link, @product.image_link, class:"form-control" %>
  </div>

    <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control"%>
  </div>


  <div>
    <%= submit_tag "Submit", class:"btn btn-default"%>
  </div>

<% end %>
