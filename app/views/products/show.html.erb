<h1> <%= @page_title %> </h1>



<h4 class="product-name"><%= @product.name%></h4>


<h4><%= number_to_currency(@product.price) %></h4>
<h4><%= @product.description %></h4>

<% @product.images.each do |image| %>
  <img class="image-class" alt="Rails" src="<%=image.image_link%>"/>
<%end%>

<div>
  <%= link_to "Edit Product", "/all_products/#{@product.id}/edit" %>
</div>

<div>
  <%= link_to "Delete Product", "/all_products/#{@product.id}", method: :delete %>
</div>

<h3 class="sale-message"><%= @product.sale_message %></h3>
<h3> <%=number_to_currency(@product.tax) %></h3>
<h3> <%=number_to_currency(@product.total)%></h3>

<h3> <%= "This product is supplied by " + @product.supplier.name %></h3>
