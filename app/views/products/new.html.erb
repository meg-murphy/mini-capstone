<%= form_tag "/all_products", method: :post do %>
<form class="form-inline">

  <div class="form-group">
     <%= text_field_tag :name, nil, placeholder: "Name", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= text_field_tag :price, nil, placeholder: "Price", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= text_field_tag :image_link, nil, placeholder: "Image", class:"form-control" %>
  </div>

    <div class="form-group">
    <%= text_field_tag :description, nil, placeholder: "Description", class: "form-control"%>
  </div>


  <div>
    <%= submit_tag "Submit", class:"btn btn-default"%>
  </div>

<% end %>
